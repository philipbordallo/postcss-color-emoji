{
  "name": "postcss-color-emoji",
  "version": "1.0.0",
  "description": "Emoji in full color",
  "author": "Philip Bordallo",
  "license": "MIT",
  "keywords": [
    "emoji",
    "color",
    "color-emoji",
    "system",
    "font",
    "family"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "scripts": {
    "build": "rollup --config configs/rollup.config.js --silent",
    "lint": "eslint --config configs/eslint.config.js ./src/",
    "pretest": "npm run build && npm run lint",
    "test": "postcss-tape"
  },
  "postcssConfig": {
    "config": "./configs/tape.config.js",
    "fixtures": "./tests/",
    "plugin": "./dist/index.cjs.js"
  },
  "babel": {
    "presets": [
      "./configs/babel.config.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@philipbordallo/eslint-config": "^2.3.0",
    "auto-changelog": "^1.11.0",
    "eslint": "^5.13.0",
    "postcss-tape": "^4.0.0",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2"
  },
  "dependencies": {
    "postcss": "^7.0.14"
  }
}
